<div class="container">
<div class="row">
 <div class="pricing-header p-3 pb-md-4 mx-auto text-center">
      <h1 class="display-4 fw-normal">C'est le moment de remplir le formulaire !</h1>
      </div>
      <div class="col-12">
      <div class="form-group">
      <%= form_tag url_for(action: 'create'), method: "post" do %>

      <%= label_tag 'Ton prénom' %>
      <%= text_field_tag 'first_name', @user.first_name, class: 'form-control' %>
      <br /> <br />
      <%= label_tag 'Ton nom' %>
      <%= text_field_tag 'last_name', @user.last_name, class: 'form-control' %>
      <br /> <br />
      <%= label_tag 'Une petite description ?' %>
      <%= text_field_tag 'description', @user.description, class: 'form-control' %>
      <br /> <br />
      <%= label_tag 'Ton email' %>
      <%= text_field_tag 'email', @user.email, class: 'form-control' %>
      <br /> <br />
      <%= label_tag 'Ton âge' %>
      <%= text_field_tag 'age', @user.age, class: 'form-control' %>
      <br /> <br />

      <%= label_tag 'Code Postal' %>
      <%= text_field_tag 'zipcode', @user.zipcode, class: 'form-control' %>
      <br /> <br />
      <%= label_tag 'Ton mot de passe' %>
      <%= text_field_tag 'password', @user.password, class: 'form-control' %>
      <br /> <br />



      <%= submit_tag "Inscription !", class:'btn btn-primary' %>

    <% end %>
      </div>
      </div>
</div>
</div>